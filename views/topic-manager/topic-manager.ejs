<script>
  $(document).ready(function() {
    console.log("Script is ready and running.");

    // Declare the messageDiv variable and set it when the document is ready
    const messageDiv = $("#message");

    // Handle click event for update-status buttons
    $(document).on("click", ".update-status", function() {
      const button = $(this);
      const postId = button.data("id");
      const status = button.data("status");

      console.log("Button clicked:", postId, status);

      // AJAX post request to update the status
      $.ajax({
        url: "/update-status",
        type: "POST",
        data: { id: postId, status: status },
        success: function(response) {
          console.log("AJAX response:", response);
          // Update the status text on the button
          if (status === "approved") {
            button.text("Approved");
            button.removeClass("update-status"); 
            button.siblings("[data-status='rejected']").hide();

            // Show the success message with green color
            messageDiv.text("Approved");
            messageDiv.removeClass("alert-danger");
            messageDiv.addClass("alert-success");
            messageDiv.show();
          } else if (status === "rejected") {
            button.text("Rejected");
            button.removeClass("update-status"); // Remove the class to prevent future clicks
            button.siblings("[data-status='approved']").hide();

            // Show the rejected message with red color
            messageDiv.text("Rejected");
            messageDiv.removeClass("alert-success");
            messageDiv.addClass("alert-danger");
            messageDiv.show();
          }

          // Hide the message after 5 seconds (adjust as needed)
          setTimeout(function() {
            messageDiv.fadeOut();
          }, 5000);
        },
        error: function(error) {
          console.log("AJAX error:", error);
        }
      });
    });
  });


